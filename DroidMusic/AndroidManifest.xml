<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ac.cr.ecci.ucr.droidmusic"
    android:versionCode="1"
    android:versionName="1.0" >
    
    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.DELETE_CACHE_FILES"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
                        android:name=".ui.SplashActivity"
            android:label="@string/droidMusic" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.ListaCancionesActivity"
            android:label="@string/droidMusic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ac.cr.ecci.ucr.droidmusic.ui.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.DashboardActivity"
            android:label="@string/droidMusic" >
        </activity>

        <service
            android:name=".Abs_DroidMusicList"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".ui.FavoritosActivity"
            android:label="@string/droidMusic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ac.cr.ecci.ucr.droidmusic.ui.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.GenerosActivity"
            android:label="@string/droidMusic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ac.cr.ecci.ucr.droidmusic.ui.DashboardActivity" />
        </activity>
        <activity
            android:name=".ui.ListasActivity"
            android:label="@string/droidMusic" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ac.cr.ecci.ucr.droidmusic.ui.DashboardActivity" />
        </activity>
    </application>

</manifest>