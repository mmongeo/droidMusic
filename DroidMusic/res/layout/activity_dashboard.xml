<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout
        android:id="@+id/dashboard_table"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <Button
                android:paddingRight="10dp"
                android:id="@+id/boton_buscar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="15dp" 
                android:drawableTop="@drawable/lupa"
                android:text="Buscar"
                android:textSize="10dp"
                />

            <Button
                android:paddingLeft="5dp"
                android:id="@+id/boton_favoritos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="15dp" 
                android:text="Favoritos"
                android:textSize="10dp"
                android:drawableTop="@drawable/estrella"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:padding="5dp" >

            <Button
                android:id="@+id/boton_listas"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="15dp" 
                android:drawableTop="@drawable/lista"
                android:text="Listas"   
                android:textSize="10dp"           
                />

            <Button
                android:id="@+id/boton_generos"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="15dp"
                android:drawableTop="@drawable/play" 
                android:text="Generos"
                android:textSize="10dp"/>
        </TableRow>
    </TableLayout>

</RelativeLayout>